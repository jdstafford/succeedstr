extends ../layout

block content
  .menu
    h2 Menu
    ul.nav.nav-pills
      li
        a(href="/") Home
      li.active
        a(href="/tasks") Todo List
      li
        a(href="/tasks/completed") Completed

  h1 #{title} / Tasks

  div.name
    input(type='text', class='taskTodo' name='taskTodo', placeholder='Add a new task')
  div.delete
    input.btn.btn-primary.btn-sm(type="submit", value='add', class="addTask")

  .clear

  div.taskList
